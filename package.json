{
  "name": "blog-last",
  "type": "module",
  "version": "0.0.0",
  "author": "liyy",
  "scripts": {
    "dev": "pnpm -F @lyb/main dev",
    "dev:theme": "pnpm -F @lyb/theme dev",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "lint": "lint-staged",
    "commitlint": "commitlint --config commitlint.config.cjs -e -V",
    "test": "pnpm -r run test"
