  "engines": {
    "node": ">14",
    "pnpm": ">4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,d.ts,css,sass,scss,yml,json,vue}": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/node": "^18.11.18",
    "@vitejs/plugin-vue": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "scss": "^0.2.4",
    "typescript": "^4.9.4",
    "unplugin-auto-import": "^0.11.5",
    "unplugin-vue-components": "^0.22.12",
    "vite": "4.0.0",
    "vitepress": "^1.0.0-alpha.35",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.22"
  }
}
